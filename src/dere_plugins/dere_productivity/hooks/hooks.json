{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/productivity-context-hook.ts",
            "description": "Inject productivity context (tasks, activity, calendar) before user prompt",
            "timeout": 60
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start-task-count.sh",
            "description": "Shows actionable task count and inbox status at session start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-end-stop-tasks.sh",
            "description": "Reminds to stop active tasks before ending session"
          }
        ]
      }
    ]
  }
}
