# dere environment configuration
# Copy to .env and customize

# Database password (used by docker-compose and app)
DB_PASSWORD=dere

# Database URL (for app - uses compose service name or localhost)
# For docker compose: postgres://dere:${DB_PASSWORD}@localhost:5432/dere
DATABASE_URL=postgres://dere:dere@localhost:5432/dere

# OpenAI API key (for embeddings in knowledge graph)
OPENAI_API_KEY=

# Daemon URL override (default from config)
# DERE_DAEMON_URL=http://localhost:8787

# Path to dere repo (for MCP servers)
DERE_PROJECT_PATH=/path/to/dere
