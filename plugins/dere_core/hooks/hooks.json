{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-context-hook.ts",
            "description": "Inject dynamic context (time, weather, knowledge graph) before user prompt",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-hook.ts",
            "description": "Capture user prompts to daemon for conversation history",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-stop-hook.ts",
            "description": "Capture Claude responses when agent stops",
            "timeout": 60
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-hook-session-end.ts",
            "description": "End dere session and update daemon state",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-stop-hook.ts",
            "description": "Capture Claude responses on Stop event",
            "timeout": 60
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-stop-hook.ts",
            "description": "Capture subagent responses",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-subagent-pre-start.ts",
            "description": "Inject personality context into subagent tasks",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-personality.ts",
            "description": "Inject personality after tool calls",
            "timeout": 60
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/dere-session-start-context.ts",
            "description": "Inject adaptive session-start context (code vs conversational)",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
